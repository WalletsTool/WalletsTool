{
  "productName": "WalletsTool",
  "version": "0.1.1",
  "identifier": "com.ezban.walletstool",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "WalletsTool",
        "label": "WalletsTool",
        "width": 350,
        "height": 750,
        "resizable": false,
        "fullscreen": false,
        "transparent": false,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true,
        "minWidth": 330,
        "minHeight": 730,
        "maximized": false,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:;",
      "capabilities": ["default"],
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Copyright © 2025 EzBan. All rights reserved.",
    "publisher": "EzBan",
    "homepage": "https://github.com/ezban/wallet_manager",
    "externalBin": [],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "一个功能强大的多链钱包管理工具，支持钱包导入、余额查询、代币转账等功能。提供直观的用户界面，帮助用户安全便捷地管理多个区块链网络上的数字资产。支持批量操作和实时余额监控，是数字资产管理的理想选择。适用于个人用户和开发者，提供安全可靠的区块链资产管理解决方案。",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": "EzBan",
      "entitlements": null
    },
    "resources": [
      "data/*"
    ],
    "shortDescription": "多链钱包管理工具 - 安全便捷的数字资产管理解决方案",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["SimpChinese"],
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico",
        "sidebarImage": "icons/icon.ico"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ]
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "epoch": 0,
        "release": "1"
      }
    }
  },
  "plugins": {}
}
